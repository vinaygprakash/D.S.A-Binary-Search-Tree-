//Creation of binary search tree by given array element.
#include<iostream>
using namespace std;
// creation of class

class Node{
    public:  // ye likhna bhut jaruri hai ny to inaccesible bol dega....
    int data;
    Node*left;
    Node*right;

    // Creation of Constructor
    Node(int val)
    {
        data=val;
        left=NULL;
        right=NULL;
    }
};
Node* insertBST(Node*root,int val)
{
    if(root==NULL)
    {
        // root=new Node(val);
        // return root;
        // or
        return new Node(val);
    }
    if(val < root->data)
    {
        root->left=insertBST(root->left,val);// root->left mtlv root->left me cal kiya...to upar jayaega aur ye root->left ...root ho jayega as root ke left update hua hai...phir wha ja kr insertion hoga..
         // jav ye root->left aayega tav upar jayega but avi tak root->left null hai so ye create krega aur root->left me val pas kar dega.

    }
    else
    {
        root->right=insertBST(root->right,val);
    }
    return root;
}
void inorder(Node*root)
{   
    if(root==NULL)
     return;
    inorder(root->left);
    cout<<root->data<<" ";
    inorder(root->right);
}

int main()
{
    Node*root=NULL;
    root=insertBST(root,5);
    insertBST(root,1);
    insertBST(root,3);
    insertBST(root,4);
    insertBST(root,2);
    insertBST(root,7);
    
    // printing inorder
    inorder(root);

    
    return 0;
}
